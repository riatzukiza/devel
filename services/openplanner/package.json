{
  "name": "openplanner",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "API-first personal data lake for LLM session archives with DuckDB (FTS) + ChromaDB (vectors).",
  "license": "MIT",
  "scripts": {
    "dev": "node --env-file=.env --loader ts-node/esm src/main.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node --env-file=.env dist/main.js",
    "test": "npm run build && node --test dist/tests/*.test.js",
    "test:coverage": "npm run build && c8 --reporter=text --reporter=lcov --reporter=html node --test dist/tests/*.test.js"
  },
  "dependencies": {
    "@fastify/multipart": "^8.2.0",
    "@fastify/sensible": "^5.6.0",
    "@types/yauzl": "^2.10.3",
    "adm-zip": "^0.5.16",
    "chromadb": "^1.8.1",
    "duckdb": "^1.0.0",
    "fastify": "^4.27.0",
    "fastify-plugin": "^5.1.0",
    "pino": "^9.0.0",
    "stream-chain": "^3.4.0",
    "stream-json": "^1.9.1",
    "yauzl": "^3.2.0"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/node": "^22.10.0",
    "@types/stream-chain": "^2.1.0",
    "@types/stream-json": "^1.7.8",
    "c8": "^10.1.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "c8": {
    "all": true,
    "exclude": [
      "dist/tests/**",
      "dist/main.js"
    ]
  }
}
