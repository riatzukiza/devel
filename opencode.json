{
  "$schema": "https://opencode.ai/config.json",
  "agent":{
    "compaction":{
      "model":"opencode/gpt-5-nano"
    }
  },
  "provider": {
    "openai":{
      "models":{
        "gpt-5.3-codex":{
          "id": "gpt-5.3-codex",
          "name": "GPT-5.3 Codex",
          "variants": {
            "none": {
              "reasoningEffort": "none",
            },
            "low": {
              "reasoningEffort": "low",
            },
            "medium": {
              "reasoningEffort": "medium",
            },
            "high": {
              "reasoningEffort": "high",
            },
            "xhigh": {
              "reasoningEffort": "xhigh",
            },
          }
        },

        "gpt-5.3":{
          "id": "gpt-5.3",
          "name": "GPT-5.3",
          "variants": {
            "none": {
              "reasoningEffort": "none",
            },
            "low": {
              "reasoningEffort": "low",
            },
            "medium": {
              "reasoningEffort": "medium",
            },
            "high": {
              "reasoningEffort": "high",
            },
            "xhigh": {
              "reasoningEffort": "xhigh",
            },
          }
        }
      }
    },
    "pandora": {
      "options": {
        "baseURL": "http://localhost:3001/v1"
      }
    }
  },
  "mcp": {
    "github": {
      "type": "remote",
      "url": "http://localhost:3210/github"
    },
    "github.review": {
      "type": "remote",
      "url": "http://localhost:3210/github/review"
    },
    "cephalon": {
      "type": "local",
      "command": ["/home/err/devel/bin/cephalon", "mcp", "serve", "--port", "7894"]
    }
  },
  "plugin": ["@howaboua/pickle-thinker@0.4.0"],
  "permission": {
    "*": "allow",
    "git *":"ask",
    "rm *":"ask",
    "rmdir *":"ask",
    "unlink *":"ask",
    "kill *":"ask",
    "pkill *":"ask",
    "git commit *":"allow",
    "git show *":"allow",
    "git log *":"allow"

  }
}
