{:source-paths
 ["src"]

 :dependencies
 [[reagent "1.2.0"]
  [binaryage/devtools "1.0.7"]]

 :builds
 {:app
  {:target :browser
   :output-dir "resources/public/js"
   :asset-path "/ui/js"
   :modules {:main {:init-fn opencode-hub.core/init}}
   :compiler-options {:warnings-as-errors true
                      :elide-asserts false}
   :devtools {:http-root "resources/public"
              :http-port 8700
              :shadow-port 7890
              :hud {:errors :warnings :progress}
              :autoload true
              :preloads [devtools.preload]}}}}