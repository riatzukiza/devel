# GitHub token to read issues/PRs across all detected repos (optional but recommended)
GITHUB_TOKEN=ghp_xxx

# Root directory containing many nested repos
ROOT_DIR=~/devel

# Port for the hub API/UI
HUB_PORT=4799

# Command to launch opencode servers
# Customize if your binary name or args differ
OPENCODE_BIN=opencode
OPENCODE_ARGS=serve --port

# Starting port to allocate per-repo opencode servers (increments by 1 per repo)
OPENCODE_BASE_PORT=5900