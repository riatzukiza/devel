{
  "name": "@promethean-os/opencode-hub",
  "version": "0.1.0",
  "description": "Continuously discover repos under ~/devel, spawn opencode servers per repo, index sessions for RAG, and provide a Shadow CLJS UI hub.",
  "license": "GPL-3.0-only",
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "tsx src/index.ts",
    "dev": "NODE_ENV=development tsx src/index.ts",
    "test": "ava",
    "ui:watch": "shadow-cljs watch app",
    "ui:release": "shadow-cljs release app",
    "ui:server": "shadow-cljs watch app --debug"
  },
  "bin": {
    "opencode-hub": "dist/cli.js"
  },
  "dependencies": {
    "@promethean-os/kanban": "^0.0.0",
    "@promethean-os/pantheon": "^0.0.0",
    "@promethean-os/persistence": "^0.0.0",
