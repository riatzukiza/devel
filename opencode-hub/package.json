    "chokidar": "^3.6.0",
    "deepmerge": "^4.3.1",
    "execa": "^9.5.0",
    "fastify": "^5.0.0",
    "get-port": "^7.1.0",
    "p-limit": "^6.1.0",
    "semver": "^7.6.3",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^22.8.1",
    "ava": "^6.1.3",
    "esbuild": "^0.24.0",
    "shadow-cljs": "2.28.15",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  }
}