{
  :apps [
    {
      :name "serena"
      :script "uvx"
      :args ["--from" "git+https://github.com/oraios/serena" "serena" "start-mcp-server" "--transport" "streamable-http" "--port" "9121"]
      :interpreter "/usr/bin/env"
      :instances 1
      :autorestart true
      :restart_delay 10000
      :kill_timeout 10000
      :merge_logs true
      :time true
      :out_file "./logs/serena-out.log"
      :error_file "./logs/serena-err.log"
      :env {
        :PM2_PROCESS_NAME "serena"
      }
      :watch false
      :ignore_watch [
        "node_modules"
        "logs"
        ".git"
      ]
    }
  ]
}
