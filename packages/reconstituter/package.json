{
  "name": "@promethean-os/reconstituter",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./opencode-sessions": {
      "types": "./dist/opencode-sessions.d.ts",
      "import": "./dist/opencode-sessions.js"
    }
  },
  "bin": {
    "reconstitute": "dist/reconstitute.js"
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "predev": "pnpm -C ../openplanner-cljs-client build && pnpm -C ../opencode-cljs-client build",
    "dev": "tsx src/reconstitute.ts",
    "prebuild": "pnpm -C ../openplanner-cljs-client build && pnpm -C ../opencode-cljs-client build",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/reconstitute.js",
    "reconstitute": "tsx src/reconstitute.ts",
    "preopencode-sessions": "pnpm -C ../openplanner-cljs-client build && pnpm -C ../opencode-cljs-client build",
    "opencode-sessions": "tsx src/opencode-sessions.ts",
    "test": "pnpm run build && ava dist/*.test.js"
  },
  "dependencies": {
    "@chroma-core/ollama": "^0.1.8",
    "@opencode-ai/sdk": "^1.1.36",
    "@promethean-os/opencode-cljs-client": "workspace:*",
    "@promethean-os/openplanner-cljs-client": "workspace:*",
    "chromadb": "^3.2.2",
    "dotenv": "^17.2.3",
    "level": "^10.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.7",
    "ava": "^6.2.0",
    "tsx": "^4.19.0",
    "typescript": "^5.5.0"
  }
}
